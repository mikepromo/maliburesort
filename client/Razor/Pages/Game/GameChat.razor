@inject AppState AppState
@inject IJSRuntime JS
@using shared
@implements IDisposable

<div class="chat-stream" id="chatStream">
    @if (Chat != null)
    {
        @foreach (ChatMessageDto m in Chat)
        {
            bool isSelf = m.PlayerId == Player?.Id;
            <div class="chat-row">
                <div class="chat-author" style="color: @(isSelf ? "var(--amber)" : "var(--blue)")">
                    @m.PlayerName.ToUpper()
                </div>
                <div class="chat-body">
                    <span class="chat-time">@m.SentAt.ToString("HH:mm:ss")</span>
                    <span class="chat-text">@m.Message</span>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-dim">INITIALIZING COMM LINK...</div>
    }
</div>

@code
{
    List<ChatMessageDto>? Chat => AppState.GameContext?.Chat;
    PlayerDto? Player => AppState.Player;

    protected override void OnInitialized()
    {
        AppState.OnChange += HandleStateChange;
    }

    private async void HandleStateChange()
    {
        await InvokeAsync(StateHasChanged);
        _ = JS.InvokeVoidAsync("eval", "var e = document.getElementById('chatStream'); if(e) e.scrollTop = e.scrollHeight;");
    }

    public void Dispose()
    {
        AppState.OnChange -= HandleStateChange;
    }
}